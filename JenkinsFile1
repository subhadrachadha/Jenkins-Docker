pipeline{
    agent any
          stages
          {
            stage ('Build'){
                  steps{
                       sh 'mvn clean package'
                  }
                  steps{
                      sh 'docker build . -t tomcatwebapp:{$env.BUILD_ID}
                  }

                  post{
                      success{
                          echo 'Now Archiving ...'
                          archiveArtifacts artifacts : '**/*.war'
                      }
                  }

              }
              
          }
}