pipeline{
    agent any
          stages
          {
            stage ('Build'){
                  steps{
                       sh 'mvn clean package'
                  }
        
                  post{
                      success{
                          echo 'Now Archiving ...'
                          archiveArtifacts artifacts : '**/*.war'
                      }
                  }

              }

              stage('Create Tomcat Docker Image'){
                  steps{
                      sh "sudo docker build . -t tomcatwebapp:${env.BUILD_ID}"
                  }

              }
              
          }
}